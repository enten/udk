{
  "$schema": "http://json-schema.org/schema",
  "id": "UdkBuilderSchema",
  "title": "Udk Builder Schema",
  "properties": {
    "main": {
      "type": "string",
      "description": "TEMPORARY DISABLED. DO NOT USE."
    },
    "browserTarget": {
      "type": "string",
      "description": "Target to browser."
    },
    "serverTarget": {
      "type": "string",
      "description": "Target for server."
    },
    "partialBrowserConfig": {
      "type": "string",
      "description": "Partial webpack config for browser."
    },
    "partialServerConfig": {
      "type": "string",
      "description": "Partial webpack config for server."
    },
    "fileReplacements": {
      "description": "Replace files with other files in the build.",
      "type": "array",
      "items": {
        "$ref": "#/definitions/fileReplacement"
      },
      "default": []
    },
    "fileLoaderEmitFile": {
      "type": "boolean",
      "description": "File loader emit file.",
      "default": false
    },
    "deleteOutputPath": {
      "type": "boolean",
      "description": "Delete the output path before building.",
      "default": true
    },
    "verbose": {
      "type": "boolean",
      "description": "Adds more details to output logging.",
      "default": false
    }
  },
  "additionalProperties": false,
  "required": [
    "browserTarget",
    "serverTarget"
  ],
  "definitions": {
    "fileReplacement": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "src": {
              "type": "string"
            },
            "replaceWith": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "src",
            "replaceWith"
          ]
        },
        {
          "type": "object",
          "properties": {
            "replace": {
              "type": "string"
            },
            "with": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "replace",
            "with"
          ]
        }
      ]
    }
  }
}
